<%= form_for @produto, :html => { :class => "form-horizontal produto" } do |f| %>

  <% if @produto.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@produto.errors.count, "error") %> prohibited this produto from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @produto.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nome, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :nome, :class => 'form-control' %>
    </div>
    <%=f.error_span(:nome) %>
  </div>
  <div class="form-group">
    <%= f.label :preco, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :preco, :class => 'form-control' %>
    </div>
    <%=f.error_span(:preco) %>
  </div>
  <div class="form-group">
    <%= f.label :parcelas, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :parcelas, :class => 'form-control' %>
    </div>
    <%=f.error_span(:parcelas) %>
  </div>
  <div class="form-group">
    <%= f.label :imagem, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :imagem, :class => 'form-control' %>
    </div>
    <%=f.error_span(:imagem) %>
  </div>
  <div class="form-group">
    <%= f.label :url, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:url) %>
  </div>

  <!-- SELECT -->
  <div class="form-group">
    <%= f.label :loja_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <select>
        <%= @lojas.each do |l| %>
          <option value="<%= l.id %>"><%= l.nome %></option>
        <% end %>
      </select>
    </div>
    <%=f.error_span(:loja_id) %>
  </div>    

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Cadastrar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancelar")),
                produtos_path, :class => 'btn btn-warning' %>
    </div>
  </div>

<% end %>

